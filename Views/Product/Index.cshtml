@model List<Product>

<h2>All Products</h2>



<div class="row">

@foreach(var product in Model){
    <div class="col col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @product.ProductName
            </div>
            <div class="panel-body">
                <p>Name: @product.ProductName </p>
                <p>Quantity: @product.Quantity</p>
                <p>Price: @product.Price.ToString("#.##")</p>
            </div>
            <div class="panel-footer">
                <a class="btn btn-primary"
                    asp-controller="Product"
                    asp-action="Edit"
                    asp-route-id="@product.Id">Edit</a>
                <a class="btn btn-danger" 
                    asp-controller="Product" 
                    asp-action="Delete" 
                    asp-route-id="@product.Id"
                    click="return Confirm('Are you sure to delete this?')">Delete</a>
            </div>
        </div>
    </div>
}

<button class="btn btn-info" id="button1" name="button1">Button1</button>
<button class="test">I am test button</button>
<input type="text" id="productName" name="productName"/>
</div>